
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20px;
}
.swiper {
  width: 100%;
  height: 200px;
}
.swiper-item {
  height: 200px;
}
.swiper-image {
  width: 100%;
  height: 100%;
}
.goods {
  width: 100%;
  padding: 20px;
}
.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
  margin-left: 10px;
}
.goods-list {
  display: flex;
  flex-wrap: wrap;
  margin-left: 10px;
}
.goods-item {
  width: calc(50% - 10px);
  margin-right: 10px;
  margin-bottom: 20px;
  background-color: #fff;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  overflow: hidden;
}
.goods-image {
  width: 100%;
  height: 120px;
  object-fit: cover;
}
.goods-name {
  font-size: 16px;
  margin: 10px;
}
.goods-price {
  font-size: 18px;
  font-weight: bold;
  margin: 10px;
  color: #f00;
}
